<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>03_FILTER</display-name>
	<welcome-file-list>
		<!-- 순서대로 읽힘. index.jsp를 새로 추가해주기 > 첫페이지로 보여주기 -->
		<welcome-file>/WEB-INF/index.jsp</welcome-file>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.xhtml</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>default.xhtml</welcome-file>
	</welcome-file-list>

	<!-- 서블릿 등록 이름 , 경로 , 매핑 -->
	<servlet>
		<servlet-name>Home</servlet-name>
		<servlet-class>Servlet.Home</servlet-class>
	</servlet>
	<servlet-mapping>
		<!-- 위에서 등록한 필터 이름으로 -->
		<servlet-name>Home</servlet-name>
		<!-- //@WebServlet(urlPatterns = {"/index.do"}) 의 경로 가져오기 -->
		<url-pattern>/index.do</url-pattern>
	</servlet-mapping>


	<!-- 필터 등록 이름 , 실제 경로 -->

	<filter>
		<filter-name>UTF8_EncodingFilter</filter-name>
		<filter-class>Filter.UTF8_EncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>UTF8_EncodingFilter</filter-name>
		<!-- 모든 경로를 잡는법 -->
		<url-pattern>*.do</url-pattern>
	</filter-mapping>



	<!-- 2번필터 코드 순서를 위로 올리면 2번 먼저 실행 -->
	<filter>
		<filter-name>HomeFilter_2</filter-name>
		<!-- 파일 이름 대소문자 잘 보기 -->
		<filter-class>Filter.HomeFilter_2</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>HomeFilter_2</filter-name>
		<!-- 서블릿 등록한 경로 -->
		<url-pattern>/index.do</url-pattern>
	</filter-mapping>



	<filter>
		<filter-name>HomeFilter_1</filter-name>
		<!-- 파일 이름 대소문자 잘 보기 -->
		<filter-class>Filter.HomeFilter_1</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>HomeFilter_1</filter-name>
		<!-- 서블릿 등록한 경로 -->
		<url-pattern>/index.do</url-pattern>
	</filter-mapping>




</web-app>